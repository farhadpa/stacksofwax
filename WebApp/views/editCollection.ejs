
<%- include ( 'header.ejs' ); %>

  <main class="container mt-5">
    <div class="row mb-5">
      <div class="col-md-6">
        <h2>
          <%= data.collection.collection_name %>
        </h2>
      </div>
      <div class="col-md-6 text-md-end">
        <a href="/collections/<%= data.collection.collection_id %>/reviews" class="btn btn-primary me-3">
          Reviews
        </a>
        <form action="" method="post">
            <button type="button" class="btn btn-primary me-3" data-bs-toggle="modal" data-bs-target="#vinylModal">
                Add vinyl to collection
              </button>
        </form>
        <form action="/profile/<%= user.username %>/collections/<%= data.collection.collection_id %>" method="post">
          <button class="btn btn-danger">
            Delete this collection
          </button>
        </form>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-4">
        <img src="<%= data.collection.image %>" alt=<%=data.collection.collection_name%>>
      </div>
    </div>

    <div class="row mb-5">
      <div class="col-md-4">
        <a href="/users/<%= data.collection.users.username %>">
          <%= data.collection.users.first_name %>
            <%= data.collection.users.last_name %>
        </a>
      </div>
    </div>
    <div class="ratings">
      <span>
        <%= data.collection.likes_count %> <i class="fa fa-thumbs-up" style="font-size:24px"></i>
      </span>
      <i class="fas fa-star"></i>
    </div>


    <ul class="row collection-list">
      <% data.collection.vinyls.forEach(vinyl=> { %>
        <li class="col-md-4">
          <a href="/vinyls/<%= vinyl.vinyl_id %>">
            <div class="card">
              <img src="<%= vinyl.image %>" alt="<%= vinyl.vinyl_name %>" class="card-img-top">
              <div class="card-body d-flex">
                <h5 class="card-title">
                  <%= vinyl.vinyl_name %>
                </h5>
                <% vinyl.genres.forEach(genre=> { %>
                  <p class="card-text">
                    <%= genre.genre_name %>
                  </p>
                  <% }) %>
                
                <form action="/remove/vinyl/<%= data.collection.collection_id %>/<%= vinyl.vinyl_id %> " method="post">
                    <button type="submit" class="btn btn-primary me-3" >
                        Remove from collection
                    </button>
                </form>
              </div>
            </div>
          </a>
        </li>
        <% }) %>
    </ul>
    <div class="modal fade" id="vinylModal" tabindex="-1" aria-labelledby="vinylModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="vinylModalLabel">Select a vinyl to add to your collection</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <ul class="list-group">
                <% vinyls.vinyls.forEach(vinyl=> { %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= vinyl.vinyl_name %>
                    <form action="/add/vinyl/<%= data.collection.collection_id %>/<%= vinyl.vinyl_id %>" method="POST">
                      <input type="hidden" name="vinyl_id" value="<%= vinyl.vinyl_id %>">
                      <button type="submit" class="btn btn-primary">Add</button>
                    </form>
                  </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      

  </main>

  <%- include ( 'footer.ejs' ); %>