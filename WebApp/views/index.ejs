  <body>
    <header>
      <div class="logo">
        <a href="#">Vinyl Collection Sharing - Stacks of Wax</a>
      </div>
      <nav>
        <ul>
          <li><a href="#">Home</a></li>
          <li><a href="#">Collections</a></li>
          <li><a href="#">Create Collection</a></li>
          <li><a href="#">Login</a></li>
          <li><a href="#">Register</a></li>
        </ul>
      </nav>
    </header>
    <main>
      <section class="hero">
        <div class="hero-text">
          <h1>Share and Discover Vinyl Collections</h1>
          <p>Join the vinyl community today and explore thousands of collections from around the world.</p>
          <a href="#" class="btn">Get Started</a>
        </div>
        <div class="hero-image">
          <img src="vinyl-collection.jpg" alt="Vinyl Collection">
        </div>
      </section>
      <section class="collections">
        <h2>Browse Collections</h2>
        <div class="filters">
          <label for="genre">Filter by Genre:</label>
          <select id="genre">
            <option value="all">All</option>
            <option value="rock">Rock</option>
            <option value="pop">Pop</option>
            <option value="jazz">Jazz</option>
            <option value="hip-hop">Hip Hop</option>
          </select>
        </div>
        <ul class="collection-list">
            <% data.collections.forEach(collection => { %>
                <li>
                    <a href="#">
                      <img src="collection2.jpg" alt="Collection 2">
                      <h3><%= collection.collection_name %></h3>
                      <p>Created by <%= collection.user_id %></p>
                      <div class="ratings">
                        <span>4.0</span>
                        <i class="fas fa-star"></i>
                      </div>
                    </a>
                  </li>
            <% }) %>
