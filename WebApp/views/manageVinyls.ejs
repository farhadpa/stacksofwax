
<%- include ( 'header.ejs' ); %>

  <main class="container mt-5">



    <ul class="row collection-list">
      <% data.vinyls.forEach(vinyl=> { %>
        <li class="col-md-4">
          <a href="/vinyls/<%= vinyl.vinyl_id %>">
            <div class="card">
              <img src="<%= vinyl.image %>" alt="<%= vinyl.vinyl_name %>" class="card-img-top">
              <div class="card-body d-flex">
                <h5 class="card-title">
                  <%= vinyl.vinyl_name %>
                </h5>
                <form action="/profile/<%= user.username %>/vinyls/<%= vinyl.vinyl_id %> " method="post">
                    <button type="submit" class="btn btn-danger me-3">
                        Delete Vinyl
                    </button>
                </form>
                <% vinyl.genres.forEach(genre=> { %>
                  <p class="card-text">
                    <%= genre.genre_name %>
                  </p>

                  <% }) %>
                
              </div>
            </div>
          </a>
        </li>
        <% }) %>
    </ul>
 
      

  </main>

  <%- include ( 'footer.ejs' ); %>