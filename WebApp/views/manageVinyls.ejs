
<%- include ( 'header.ejs' ); %>

  <main class="container mt-5">

    <ul class="row collection-list list-unstyled ">
      <% data.vinyls.forEach(vinyl=> { %>
      <li class="col-md-4 mb-4">
        <div class="card embed-responsive embed-responsive-16by9 h-100">
          <img src="<%= vinyl.image %>" alt="<%= vinyl.vinyl_name %>" class="card-img-top">
          <div class="card-body d-flex  justify-content-between " >
            <div>
                <a href="/vinyls/<%= vinyl.vinyl_id %>">
                  <h4 class="card-title">
                  <%= vinyl.vinyl_name %>
                  </h4>
                </a>
              <p class="card-text">
              <% vinyl.genres.forEach(genre=> { %>
              <%= (genre.genre_name) %>
              <% }) %>
              </p>
              
 
           </div>
            <form action="/profile/<%= user.username %>/vinyls/<%= vinyl.vinyl_id %> " method="post">
              <button type="submit" class="btn me-4 " style="margin-left: 20%;"
              onclick="return confirm('Are you sure you want to delete <%= vinyl.vinyl_name %> ?');">
                <span class="material-icons">
                  delete_outline
                </span>
              </button>
            </form>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>
    
  </main>

  <%- include ( 'footer.ejs' ); %>