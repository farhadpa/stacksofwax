<%- include('header.ejs'); %>

    <main class="container mt-4">
        <div>
            <h2>
                <%= user.first_name + ' ' + user.last_name %> Profile
            </h2>
        </div>
        <div>
            <ul class="list-group">
                <% data.user.collections.forEach(collection=> { %>
                    <li class="list-group-item">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-4">
                                <img src=<%=collection.image %> alt=<%=collection.collection_name%> class="img-fluid">
                            </div>
                            <div class="col-12 col-md-8">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h3>
                                            <%= collection.collection_name %>
                                        </h3>
                                    </div>
                                    <div>
                                        <form
                                            action="/profile/<%= user.username %>/collections/<%= collection.collection_id %>"
                                            method="get">
                                            <button type="submit" class="btn btn-danger me-3">
                                                Edit Collection
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="ratings">
                                        <span>
                                            <%= collection.likes_count %> <i class="fa fa-thumbs-up"
                                                    style="font-size:24px"></i>
                                        </span>
                                        <i class="fas fa-star"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <% }) %>
            </ul>
        </div>
        <div class="button d-flex">
            <form action="/create/vinyls" method="get">
                <button type="submit" class="btn btn-primary me-3">
                    Add New Vinyl
                </button>
            </form>
            <form action="/create/collections" method="get">
                <button type="submit" class="btn btn-primary me-3">
                    Create New Collection
                </button>
            </form>
        </div>

    </main>

    <%- include('footer.ejs'); %>